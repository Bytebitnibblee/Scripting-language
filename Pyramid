function diamond(rows = 5) {
  for (let i = 1; i <= rows; i++) {
    console.log(" ".repeat(rows - i) + "* ".repeat(i));
  }
  for (let i = rows - 1; i >= 1; i--) {
    console.log(" ".repeat(rows - i) + "* ".repeat(i));
  }
}
diamond(5);




  </script>

