<!DOCTYPE html>
<html>
<head>
  <title>Even Numbers Finder</title>
</head>
<body>

  <h2>Even Numbers</h2>
  <p id="result"></p> 

  <script>
    let numbers = [];

   
    for (let i = 0; i < 6; i++) {
      let input = prompt("Enter number " + (i + 1) + ":");
      let num = parseInt(input); 
      numbers.push(num); 
    }

    let evenNumbers = [];
    for (let i = 0; i < numbers.length; i++) {
      if (numbers[i] % 2 === 0) {
        evenNumbers.push(numbers[i]);
      }
    }
    
    document.getElementById("result").innerText = "Even Numbers: " + evenNumbers.join(", ");
  </script>

</body>
</html>
