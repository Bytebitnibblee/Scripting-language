<!DOCTYPE html>
<html>
<head>
  <title>Shopping Cart</title>
</head>
<body>

  <h1>Shopping Cart Result</h1>
  <h2 id="discountMessage"></h2> 

  <script>
    let prices = [];
    let total = 0;
    for (let i = 0; i < 5; i++) {
      let input = prompt("Enter price for item " + (i + 1) + ":");
      let price = parseFloat(input); 
      prices.push(price);
      total += price; 
    }
    let message = "";
    if (total > 500) {
      message = "You get a discount";
    } else {
      message = "No discount";
    }
    
    document.getElementById("discountMessage").innerText = message;
  </script>

</body>
</html>
